<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:AppDuoXF.Controls"
             xmlns:converters="clr-namespace:AppDuoXF.Converters"
             x:Class="AppDuoXF.ContentViews.ProfileAchievementsContentView">
  <ContentView.Content>
        <ListView
          ItemsSource="{Binding Achievements}"
          HasUnevenRows="True"
          SeparatorVisibility="None"
          >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell                        
                        >
                        <ViewCell.View>
                            <FlexLayout Padding="20">
                                <Grid FlexLayout.Basis="200" HeightRequest="130">
                                    <Image Source="{Binding Icon}"/>
                                    <Label
                                        FontSize="20"
                                        HorizontalTextAlignment="Center"
                                        Text="{Binding Level}"
                                        TextColor="{Binding IsActive, Converter={converters:AchievementsActiveToTextColorConverter}}"
                                        TranslationY="-20"
                                        VerticalTextAlignment="End" />
                                </Grid>
                                <StackLayout
                                    Margin="20,0,0,0" 
                                    FlexLayout.Basis="100%"
                                    Spacing="0">
                                    <Label                                        
                                        FontSize="26" 
                                        Text="{Binding Name}" 
                                        VerticalOptions="CenterAndExpand"/>
                                    <Label
                                        FontFamily="{StaticResource FontRegular}"
                                        FontSize="22"
                                        Text="{Binding Description}"
                                        TextColor="#777777" 
                                        VerticalOptions="CenterAndExpand"/>
                                    <Grid 
                                        ColumnSpacing="20"
                                        IsVisible="{Binding IsActive}"
                                        VerticalOptions="CenterAndExpand">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <controls:HorizontalProgressBar
                                            Grid.Column="0"
                                            HeightRequest="30"
                                            Progress="{Binding Progress}"
                                            ProgressColor="{StaticResource ProgressColor}"
                                            TrackColor="{StaticResource TrackColor}"
                                            VerticalOptions="Center" />
                                        <Label
                                            Grid.Column="1"
                                            FontSize="20"
                                            Text="{Binding Status}"
                                            TextColor="#afafae" 
                                            VerticalOptions="Center"
                                            />
                                    </Grid>
                                </StackLayout>
                            </FlexLayout>
                        </ViewCell.View>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentView.Content>
</ContentView>